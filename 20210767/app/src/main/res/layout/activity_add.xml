<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="center_horizontal"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leeseoyun"
        android:paddingTop="20dp"
        android:text="오늘의 일기 추가"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        app:srcCompat="@mipmap/emotion4" />

    <TextView
        android:id="@+id/monthAndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leeseoyun"
        android:text="달월"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leeseoyun"
        android:paddingBottom="70dp"
        android:text="요일"
        android:textColor="#838383"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/etTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leeseoyun"
        android:text="제목"
        android:textColor="#5A5A5A"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/etAddTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/leeseoyun"
        android:hint="제목을 적어볼까요?"
        android:inputType="textPersonName"
        android:paddingTop="5dp"
        android:paddingBottom="20dp" />

    <TextView
        android:id="@+id/etTextContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leeseoyun"

        android:text="내용"
        android:textColor="#5A5A5A"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/etAddContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:ems="10"
        android:fontFamily="@font/leeseoyun"
        android:hint="오늘의 하루는 어떤가요?"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:paddingTop="5dp"
        android:paddingBottom="100dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="40dp">

        <Button
            android:id="@+id/btnAddFood"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leeseoyun"
            android:text="추가" />

        <Button
            android:id="@+id/btnAddCancel"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/leeseoyun"
            android:text="취소" />
    </LinearLayout>

</LinearLayout>